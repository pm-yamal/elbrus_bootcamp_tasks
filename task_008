// Задание 8
// Напишите функцию, которая принимает массив городов и возвращает новый массив только тех, в названии которых только четное количество букв.
// ПРИМЕР: evenCityName(['Москва', 'Псков', 'Новосибирск', 'Омск', 'Хабаровск', 'Лабытнанги', 'Салехард', 'Харп'])

function evenCityName(city) {
  const cityNew = [];
  for (let i = 0; i < city.length; i++) {
    if (city[i].length % 2 === 0) {
      cityNew.push(city[i]);
    }
  }
  return cityNew;
}
console.log(
  evenCityName([
    'Москва',
    'Псков',
    'Новосибирск',
    'Омск',
    'Хабаровск',
    'Лабытнанги',
    'Салехард',
    'Харп',
  ])
);
