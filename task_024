// Задание 24
// Напишите функцию, которая принимает на вход целое число и возвращает сумму его цифр.
// ПРИМЕР: 125 -> 8 (1+2+5)

function sumOfDigits(num) {
  let str = '' + num;
  let sum = 0;
  for (let i = 0; i < str.length; i++) {
    sum += +str[i];
  }
  return sum;
}
console.log(sumOfDigits(125));
